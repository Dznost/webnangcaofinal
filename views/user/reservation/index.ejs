<script>
const qtyInputs = document.querySelectorAll('.qty-input');
const orderSummary = document.getElementById('orderSummary');
const selectedItemsDiv = document.getElementById('selectedItems');
const foodTotalSpan = document.getElementById('foodTotal');
const totalDiscountSpan = document.getElementById('totalDiscount');
const grandTotalSpan = document.getElementById('grandTotal');
const foodTotalRow = document.getElementById('foodTotalRow');
const discountRow = document.getElementById('discountRow');
const branchSelect = document.getElementById('branchId');
const dishesContainer = document.getElementById('dishesContainer');
const dishCards = document.querySelectorAll('.reservation-dish-card');
const dishFilterNotice = document.getElementById('dishFilterNotice');

const DEPOSIT_FEE = 100000;

branchSelect.addEventListener('change', function() {
    const selectedOption = this.options[this.selectedIndex];
    
    if (this.value === '') {
        dishFilterNotice.textContent = 'Ch·ªçn chi nh√°nh tr∆∞·ªõc ƒë·ªÉ xem m√≥n ƒÉn c√≥ s·∫µn t·∫°i chi nh√°nh ƒë√≥';
        dishFilterNotice.style.color = '#666';
        dishCards.forEach(card => {
            card.style.opacity = '0.5';
            card.style.pointerEvents = 'none';
            const input = card.querySelector('.qty-input');
            input.value = 0;
            input.dispatchEvent(new Event('change'));
        });
        return;
    }
    
    const branchDishes = selectedOption.dataset.dishes ? selectedOption.dataset.dishes.split(',') : [];
    let visibleCount = 0;
    
    dishCards.forEach(card => {
        const dishId = card.dataset.dishId;
        if (branchDishes.includes(dishId)) {
            card.style.display = 'flex';
            card.style.opacity = '1';
            card.style.pointerEvents = 'auto';
            visibleCount++;
        } else {
            card.style.display = 'none';
            const input = card.querySelector('.qty-input');
            input.value = 0;
            input.dispatchEvent(new Event('change'));
        }
    });
    
    if (visibleCount === 0) {
        dishFilterNotice.textContent = 'Chi nh√°nh n√†y ch∆∞a c√≥ m√≥n ƒÉn n√†o';
        dishFilterNotice.style.color = '#d32f2f';
    } else {
        dishFilterNotice.textContent = `Hi·ªÉn th·ªã ${visibleCount} m√≥n c√≥ s·∫µn t·∫°i chi nh√°nh n√†y`;
        dishFilterNotice.style.color = '#28a745';
    }
});

const searchInput = document.getElementById('dishSearch');
searchInput.addEventListener('input', filterDishes);

const filterBtns = document.querySelectorAll('.filter-btn');
let activeCategory = 'all';

filterBtns.forEach(btn => {
    btn.addEventListener('click', function() {
        filterBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        activeCategory = this.dataset.category;
        filterDishes();
    });
});

function filterDishes() {
    const searchTerm = searchInput.value.toLowerCase();
    const selectedBranch = branchSelect.value;
    const branchDishes = selectedBranch ? branchSelect.options[branchSelect.selectedIndex].dataset.dishes.split(',') : [];
    
    let visibleCount = 0;
    
    dishCards.forEach(card => {
        const dishName = card.dataset.dishName;
        const dishCategory = card.dataset.category;
        const dishId = card.dataset.dishId;
        
        const matchesSearch = dishName.includes(searchTerm);
        const matchesCategory = activeCategory === 'all' || dishCategory === activeCategory;
        const matchesBranch = !selectedBranch || branchDishes.includes(dishId);
        
        if (matchesSearch && matchesCategory && matchesBranch) {
            card.style.display = 'flex';
            visibleCount++;
        } else {
            card.style.display = 'none';
        }
    });
}

// Plus/Minus buttons
document.querySelectorAll('.qty-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const dishId = this.dataset.dishId;
        const input = document.getElementById(`qty-${dishId}`);
        const currentVal = parseInt(input.value) || 0;
        
        if (this.classList.contains('plus')) {
            input.value = Math.min(currentVal + 1, 20);
        } else if (this.classList.contains('minus')) {
            input.value = Math.max(currentVal - 1, 0);
        }
        
        input.dispatchEvent(new Event('change'));
    });
});

// Update order summary when quantity changes
qtyInputs.forEach(input => {
    input.addEventListener('change', updateOrderSummary);
});

function updateOrderSummary() {
    let foodTotal = 0;
    let totalDiscount = 0;
    let selectedItems = [];
    
    qtyInputs.forEach(input => {
        const qty = parseInt(input.value) || 0;
        if (qty > 0) {
            const price = parseInt(input.dataset.price);
            const discount = parseInt(input.dataset.discount) || 0;
            const name = input.dataset.dishName;
            
            const itemTotal = price * qty;
            const itemDiscount = (discount / 100) * itemTotal;
            
            foodTotal += itemTotal;
            totalDiscount += itemDiscount;
            
            selectedItems.push({
                name,
                qty,
                price,
                discount,
                total: itemTotal - itemDiscount
            });
        }
    });
    
    if (selectedItems.length > 0) {
        orderSummary.style.display = 'block';
        foodTotalRow.style.display = 'block';
        
        let itemsHtml = '<ul class="selected-items-list">';
        selectedItems.forEach(item => {
            itemsHtml += `<li>${item.name} x${item.qty} = ${item.total.toLocaleString('vi-VN')}ƒë</li>`;
        });
        itemsHtml += '</ul>';
        selectedItemsDiv.innerHTML = itemsHtml;
        
        foodTotalSpan.textContent = foodTotal.toLocaleString('vi-VN') + 'ƒë';
        
        if (totalDiscount > 0) {
            discountRow.style.display = 'block';
            totalDiscountSpan.textContent = '-' + totalDiscount.toLocaleString('vi-VN') + 'ƒë';
        } else {
            discountRow.style.display = 'none';
        }
        
        const grandTotal = DEPOSIT_FEE + (foodTotal - totalDiscount);
        grandTotalSpan.textContent = grandTotal.toLocaleString('vi-VN') + 'ƒë';
    } else {
        orderSummary.style.display = 'none';
        foodTotalRow.style.display = 'none';
        discountRow.style.display = 'none';
        grandTotalSpan.textContent = DEPOSIT_FEE.toLocaleString('vi-VN') + 'ƒë';
    }
}

// Validate date/time before submit
document.getElementById('reservationForm').addEventListener('submit', function(e) {
    const date = document.getElementById('date').value;
    const time = document.getElementById('time').value;
    
    if (!date || !time) {
        e.preventDefault();
        alert('Vui l√≤ng ch·ªçn ng√†y v√† gi·ªù ƒë·∫∑t b√†n');
        return;
    }
    
    const reservationDateTime = new Date(`${date}T${time}`);
    const now = new Date();
    
    if (reservationDateTime <= now) {
        e.preventDefault();
        alert('Ng√†y gi·ªù ƒë·∫∑t b√†n ph·∫£i l·ªõn h∆°n th·ªùi gian hi·ªán t·∫°i');
        return;
    }
});

// Initial update
updateOrderSummary();

// Initial state - disable dishes until branch selected
dishCards.forEach(card => {
    card.style.opacity = '0.5';
    card.style.pointerEvents = 'none';
});
</script>

