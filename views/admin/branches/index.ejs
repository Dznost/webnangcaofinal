<script>
async function changeTable(branchId, action) {
    try {
        const url = `/admin/branches/${branchId}/${action}-table`;
        const response = await fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Reload page to update table count
            window.location.reload();
        } else {
            alert(data.message || 'C√≥ l·ªói x·∫£y ra');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('C√≥ l·ªói x·∫£y ra khi c·∫≠p nh·∫≠t b√†n');
